{
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "strict": 0,
      "comma-dangle": "off",
      "react/jsx-filename-extension": "off",
      "react/prop-types": "off",
      "no-unused-vars": [
        "warn",
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "indent": [
        "warn",
        2
    ],
    "brace-style": [
        "warn",
        "1tbs"
    ],
    "curly": [
        "error"
    ],
    "linebreak-style": [
        "warn",
        "unix"
    ],
    "semi": [
        "warn",
        "always"
    ],
    "no-console": [
        "off"
    ],
    "no-undef": [
        1
    ]
    }
  }